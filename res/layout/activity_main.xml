<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/signup">



    <EditText

        android:id="@+id/email_reg"
        android:layout_width="359dp"
        android:layout_height="65dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/blank"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="10dp"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
       />

    <EditText
        android:layout_below="@id/email_reg"
        android:id="@+id/password_reg"
        android:layout_width="359dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="25dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:hint="@string/enter_password"
        android:background="@drawable/blank"
        android:inputType="textPassword"
       />

    <ImageButton
        android:layout_below="@id/password_reg"
        android:id="@+id/Reg_button_reg"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:text="register"
        android:background="@drawable/buttonbar"
        android:layout_marginLeft="89dp"
         />

    <ImageButton
        android:id="@+id/Log_button_reg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/Reg_button_reg"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundbar"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="489dp"
        android:layout_marginLeft="163dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="573dp"
        android:layout_marginLeft="313dp"/>


</RelativeLayout>